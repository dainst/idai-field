{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "../node_modules",
    "../dist",
    "../release"
  ]
}
