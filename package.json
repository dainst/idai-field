{
  "name": "idai-field-client",
  "description": "iDAI.field 2 Client",
  "main": "main.js",
  "version": "2.7.0",
  "license": "Apache-2.0",
  "author": "German Archaeological Institute",
  "scripts": {
    "prebuild": "rimraf css/* && rimraf src/* && rimraf fonts/*",
    "build": "gulp copy-fonts-convert-sass && tsc -p app/tsconfig.json && tsc -p test/tsconfig.json",
    "clean": "git clean -xdf app test",
    "convert-sass": "gulp convert-sass",
    "start": "electron . dev",
    "test": "jasmine JASMINE_CONFIG_PATH=test/unit/config/jasmine.json",
    "synctest": "jasmine JASMINE_CONFIG_PATH=test/sync/jasmine.json",
    "pree2e": "rimraf test/e2e-screenshots/*.png",
    "e2e": "node test/e2e/spectron.js",
    "package": "build -mw --publish never",
    "package-mac": "build -m",
    "package-win": "build -w nsis"
  },
  "build": {
    "appId": "org.dainst.field",
    "productName": "iDAI.field",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "img/logo.icns",
      "artifactName": "iDAI.field-${version}-MacOS.${ext}",
      "publish": "github"
    },
    "win": {
      "target": "zip",
      "icon": "img/logo.ico",
      "artifactName": "iDAI.field-${version}-Windows.${ext}",
      "publish": "github"
    },
    "npmRebuild": false,
    "extraResources": [
      "config",
      "test/test-data/imagestore-samples"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dainst/idai-field.git"
  },
  "dependencies": {
    "@angular/common": "6.1.4",
    "@angular/core": "6.1.4",
    "@angular/http": "6.1.4",
    "@angular/forms": "6.1.4",
    "@angular/platform-browser": "6.1.4",
    "@angular/platform-browser-dynamic": "6.1.4",
    "@angular/platform-server": "6.1.4",
    "@angular/router": "6.1.4",
    "@mdi/font": "2.5.94",
    "@ng-bootstrap/ng-bootstrap": "3.0.0",
    "Leaflet.vector-markers": "0.0.6",
    "angular2-uuid": "1.1.0",
    "bootstrap": "4.1.3",
    "electron-log": "^2.2.17",
    "electron-updater": "^3.1.1",
    "es6-shim": "0.35.0",
    "express": "4.15.0",
    "express-pouchdb": "4.1.0",
    "idai-components-2": "1.24.11",
    "ip": "1.1.5",
    "leaflet": "1.2.0",
    "leaflet-imageoverlay-rotated": "0.1.1",
    "leaflet.pm": "0.17.3",
    "levelup": "1.3.5",
    "memorystream": "0.3.1",
    "moment": "2.21.0",
    "papaparse": "4.1.4",
    "pouchdb": "6.3.4",
    "pouchdb-load": "1.4.6",
    "pouchdb-replication-stream": "1.2.9",
    "pouchdb-server": "^2.3.6",
    "reflect-metadata": "0.1.8",
    "roboto-fontface": "0.6.0",
    "rxjs": "6.0.0",
    "showdown": "1.8.6",
    "svg-pan-zoom": "3.5.3",
    "systemjs": "0.21.4",
    "tsfun": "1.16.12",
    "update-electron-app": "^1.3.0",
    "viz.js": "1.8.1",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@types/geojson": "0.0.32",
    "@types/jasmine": "~2.5.41",
    "@types/leaflet": "1.0.69",
    "@types/leaflet-imageoverlay-rotated": "0.1.0",
    "@types/leaflet.pm": "0.13.0",
    "@types/node": "7.0.3",
    "@types/papaparse": "4.1.28",
    "@types/pouchdb": "~6.1.1",
    "@types/showdown": "1.7.5",
    "electron": "2.0.8",
    "electron-builder": "20.28.3",
    "electron-packager": "8.4.0",
    "electron-rebuild": "^1.5.7",
    "file-api": "0.10.4",
    "file-url": "^2.0.2",
    "gulp": "3.9.0",
    "gulp-concat": "2.6.0",
    "gulp-sass": "3.1.0",
    "gulp-webserver": "0.9.1",
    "jasmine": "2.5.2",
    "jasmine-core": "2.5.2",
    "pouchdb-adapter-memory": "^6.3.4",
    "protractor": "5.1.2",
    "protractor-console-plugin": "0.1.1",
    "protractor-fail-fast": "2.0.0",
    "rimraf": "2.5.4",
    "spectron": "^3.7.2",
    "typescript": "3.0.1",
    "yargs": "5.0.0"
  }
}
