{
  "name": "idai-field-client",
  "description": "iDAI.field 2 Client",
  "main": "main.js",
  "version": "0.17.1",
  "license": "Apache-2.0",
  "author": "German Archaeological Institute",
  "scripts": {
    "prebuild": "rimraf css/* && rimraf src/* && rimraf fonts/*",
    "build": "gulp create-configs && gulp compile",
    "start": "electron . config/config.json",
    "test": "jasmine JASMINE_CONFIG_PATH=test/node/config/jasmine.json && karma start test/browser/config/karma.conf.js",
    "pree2e": "rimraf test/e2e-screenshots/*.png",
    "e2e": "node test/e2e/spectron.js",
    "server": "gulp webserver-watch",
    "make-dist": "gulp versioning --build $1",
    "package": "build -mw --publish never",
    "package-mac": "build -m dmg --publish never",
    "package-win": "build -w nsis --publish never"
  },
  "build": {
    "appId": "org.dainst.idai-field-client",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "zip",
      "icon": "img/logo.icns"
    },
    "win": {
      "target": "zip",
      "icon": "img/logo.ico"
    },
    "npmRebuild": false,
    "extraResources": [
      "config",
      "test/test-data/imagestore-samples"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codarchlab/idai-field-client.git"
  },
  "dependencies": {
    "@angular/common": "4.2.2",
    "@angular/compiler": "4.2.2",
    "@angular/core": "4.2.2",
    "@angular/forms": "4.2.2",
    "@angular/http": "4.2.2",
    "@angular/platform-browser": "4.2.2",
    "@angular/platform-browser-dynamic": "4.2.2",
    "@angular/router": "4.2.2",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.26",
    "Leaflet.vector-markers": "0.0.6",
    "angular2-uuid": "1.1.0",
    "bootstrap": "^4.0.0-alpha.6",
    "deep-equal": "1.0.1",
    "es6-shim": "0.35.0",
    "express": "~4.15.0",
    "express-pouchdb": "2.3.6",
    "idai-components-2": "^1.3.50",
    "ip": "1.1.5",
    "leaflet": "1.0.3",
    "leaflet-imageoverlay-rotated": "0.1.1",
    "leaflet.pm": "0.17.2",
    "levelup": "^1.3.5",
    "mdi": "1.8.36",
    "moment": "2.18.1",
    "papaparse": "~4.1.4",
    "pouchdb": "^6.3.4",
    "pouchdb-server": "^2.3.6",
    "reflect-metadata": "0.1.8",
    "roboto-fontface": "0.6.0",
    "rxjs": "5.0.1",
    "systemjs": "0.19.31",
    "zone.js": "0.8.11"
  },
  "devDependencies": {
    "@types/electron": "~1.4.31",
    "@types/geojson": "0.0.32",
    "@types/jasmine": "~2.5.41",
    "@types/leaflet": "^1.0.66",
    "@types/leaflet-imageoverlay-rotated": "~0.1.0",
    "@types/leaflet.pm": "~0.13.0",
    "@types/node": "7.0.3",
    "@types/papaparse": "4.1.28",
    "@types/pouchdb": "~6.1.1",
    "archiver": "1.1.0",
    "chromedriver": "^2.29.0",
    "electron": "1.6.1",
    "electron-builder": "^15.2.0",
    "electron-packager": "8.4.0",
    "electron-rebuild": "^1.5.7",
    "file-api": "0.10.4",
    "file-url": "^2.0.2",
    "fs-extra": "^2.1.2",
    "gulp": "3.9.0",
    "gulp-concat": "2.6.0",
    "gulp-replace": "0.5.4",
    "gulp-sass": "3.1.0",
    "gulp-typescript": "3.1.4",
    "gulp-uglify": "1.5.1",
    "gulp-webserver": "0.9.1",
    "jasmine": "2.5.2",
    "jasmine-core": "2.5.2",
    "karma": "1.4.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-electron-launcher": "^0.2.0",
    "karma-jasmine": "1.1.0",
    "pouchdb-adapter-memory": "^6.3.4",
    "protractor": "5.1.2",
    "protractor-console-plugin": "0.1.1",
    "protractor-fail-fast": "2.0.0",
    "rimraf": "2.5.4",
    "spectron": "^3.7.2",
    "typescript": "2.3.1",
    "yargs": "5.0.0"
  }
}
